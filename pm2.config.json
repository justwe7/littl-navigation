{
  "apps": [
    {
      "name": "api-server",
      "script": "./server/index.js",
      "args": "start",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "exec_mode": "cluster",
      "instances": 2,
      "instance_var": "INSTANCE_ID",
      "max_memory_restart": "400M",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ]
}
